{
  "extends": [
    "stylelint-scss",
    "stylelint-config-recommended"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["extends", "ignores"]
      }
    ],
    "indentation": 2,
    "unit-whitelist": ["em", "rem", "s", "%", "px"],
    "block-closing-brace-newline-after": "always"
  }
}